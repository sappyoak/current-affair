{
  "name": "current-affair",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "ava --color=true",
    "watch": "tsc -w --target=es6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sappyoak/current-affair.git"
  },
  "author": "Forrest Collins",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sappyoak/current-affair/issues"
  },
  "homepage": "https://github.com/sappyoak/current-affair#readme",
  "devDependencies": {
    "@types/eslint": "^8.4.2",
    "@types/node": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "ava": "^4.3.0",
    "eslint": "^8.16.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.2"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [    
      "test/**/*",
      "!test/**/fixture.*"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "verbose": true,
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--trace-deprecation",
      "--trace-exit",
      "--trace-sigint",
      "--napi-modules"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 100,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npx eslint --fix --quiet"
    ]
  }
}
